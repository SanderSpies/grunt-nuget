<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<BuildDependsOn>
			InstallGrunt;
			$(BuildDependsOn)
		</BuildDependsOn>
		<NodeModulesGruntCli>$(SolutionDir)node_modules\grunt-cli\bin\grunt</NodeModulesGruntCli>
		<NodeModulesGrunt>$(SolutionDir)node_modules\grunt\package.json</NodeModulesGrunt>
	</PropertyGroup>
	<Target Name="InstallGrunt">
		<Message Text="Installing Grunt..."/>
		<Exec Condition=" !Exists('$(NodeModulesGrunt)')" Command="$(SolutionDir)packages\Npm.js.1.3.15.3\tools\npm.cmd install grunt" WorkingDirectory="$(SolutionDir)" />
		<Exec Condition=" !Exists('$(NodeModulesGruntCli)')" Command="$(SolutionDir)packages\Npm.js.1.3.15.3\tools\npm.cmd install grunt-cli" WorkingDirectory="$(SolutionDir)" />
		<Message Text="Grunt installed!"/>
	</Target>
</Project>
